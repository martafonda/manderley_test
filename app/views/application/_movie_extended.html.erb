<%= content_tag_for(:article, movie, class: "column_4 padding bck #{ cycle("dark", "light") }") do %>
    <header>
      <h3 style="height: 60px"><%= movie.title %></h3>
    </header>
        <div class="movie-info">
      <p><span><%= t('year').capitalize %>: </span><%= movie.year %></p>
      <p><span><%= t('duration').capitalize %> </span><%= movie.duration %> mn</p>
      <p><span><%= t('genre').capitalize %>: </span><%= movie.categories %></p>
      <p><span><%= t('synopsis').capitalize %>: </span><%= truncate(movie.synopsis, length: 80) %></p>
    </div>
    <aside class="buttons">
      <%= link_to 'Show', movie, class: 'button secondary' %>
      <% if current_user == movie.user && user_signed_in? %>
        <%= link_to 'Edit', edit_movie_path(movie), class: 'button secondary' %>
        <%= link_to "Destroy", movie, class: 'button secondary ', method: :delete, data: { confirm: 'Are you sure?' }, remote: true %>
      <% end %>
    </aside>
<% end %>

