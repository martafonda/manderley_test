
<div class="column_5">
  <article class="cast-form">
    <aside class="margin">
      <% if user_signed_in? %>
      <%= simple_form_for( @cast, url: movie_create_cast_path(@movie)) do |f| %>
     
      <div class="field">
        <%= f.label :person_id %><br>
        <%= f.select :person_id, Person.all.map { |p| [p.complete_name, p.id]  } %>
      </div>

      <div class="field">
        <%= f.label :role %><br>
        <%= f.select :role, Cast::ROLE.map { |role| [role.titleize, role]  } %>
      </div>

      <div class="actions">
        <%= f.button :submit %>
      </div>
      <% end %>
      <% else %>
      <div class="bck dark">
        <p class="white">
          You must be logged in to add or edit a movie
        </p>
      </div>
      <% end %>
    </aside>
  </article>
  
</div>